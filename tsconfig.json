{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": true,
		"outDir": "./build",
		"module": "esnext",
		"moduleResolution": "node",
		/*"allowSyntheticDefaultImports": true,*/
		"allowJs": true,
		"checkJs": false,
		"noImplicitAny": true,
		/*"noImplicitOverride": true,*/
		"target": "es2015",
		"newLine": "lf",
		"skipLibCheck": true,
		"sourceMap": true,
		"paths": {},
		"rootDir": "./src",
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*.js","src/**/*.ts"],
	"exclude": [],
	"typeAcquisition": {
		"enable": true
	}
}